<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Theresa Gutierrez"
        android:id="@+id/name"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_alignBottom="@+id/accept"
        android:layout_toLeftOf="@+id/accept"
        android:layout_toStartOf="@+id/accept"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp" />

    <Button
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="Decline"
        android:id="@+id/decline"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#215352"
        android:textColor="#FFFFFF" />

    <Button
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="Accept"
        android:id="@+id/accept"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/decline"
        android:layout_toStartOf="@+id/decline"
        android:background="@color/Yellow"
        android:textColor="#000000" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageView4"
        android:src="@drawable/guy"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/accept"
        android:layout_toLeftOf="@+id/name"
        android:layout_toStartOf="@+id/name"
        android:layout_alignParentTop="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />


</RelativeLayout>