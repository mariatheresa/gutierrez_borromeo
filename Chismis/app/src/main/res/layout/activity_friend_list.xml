<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:id="@+id/ld">

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/customListview"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/notif"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_alignBottom="@+id/accept"
        android:layout_toLeftOf="@+id/accept"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:clickable="true"
        android:layout_marginLeft="5dp"
        android:visibility="visible"/>

    <Button
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="Decline"
        android:id="@+id/decline"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#215352"
        android:textColor="#FFFFFF"
        android:clickable="true"
        android:visibility="visible"/>

    <Button
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="Accept"
        android:id="@+id/accept"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/decline"
        android:layout_toStartOf="@+id/decline"
        android:background="@color/Yellow"
        android:textColor="#000000"
        android:clickable="true"
        android:visibility="visible"/>

    <ImageView
        android:layout_width="5dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/accept"
        android:layout_toLeftOf="@+id/notif"
        android:layout_toStartOf="@+id/notif"
        android:layout_alignParentTop="true"
        android:layout_marginRight="5dp"
        android:visibility="visible"/>


</RelativeLayout>